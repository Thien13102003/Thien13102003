<AnchorPane prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" styleClass="close-label">
               <graphic>
                  <FontAwesomeIconView fill="#818181" glyphName="TIMES" size="20.0" />
               </graphic>
               <padding>
                  <Insets bottom="5.0" left="7.0" right="7.0" top="5.0" />
               </padding>
            </Label>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Encrypt your PDF with a password so it can't be removed." textFill="#d71010">
                     <font>
                        <Font name="Georgia Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <MFXPasswordField floatingText="Choose your password" prefWidth="300.0" />
                  <MFXPasswordField allowPaste="true" floatingText="Repeat your password" prefHeight="18.0" prefWidth="300.0" />
                  <MFXButton contentDisplay="RIGHT" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #d9d9d9;" text="ENCRYPT PDF" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="ARROW_RIGHT" size="20" />
                     </graphic>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MFXButton>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <effect>
      <DropShadow blurType="ONE_PASS_BOX" height="44.4" radius="21.112499999999997" spread="0.45" width="42.05">
         <color>
            <Color red="0.20000000298023224" green="0.20000000298023224" blue="0.20000000298023224" />
         </color>
      </DropShadow>
   </effect>
</AnchorPane>
